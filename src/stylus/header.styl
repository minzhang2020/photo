.header
  &-nav
    position: fixed
    width: 100%
    left: 0
    top: 0
    background-color: #fff
    height: 75px
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15)
    z-index: 10

    &-bar
      height: 75px
      width: 1260px
      margin: 0 auto

    &-index
      position: relative

  &-banner
    position: relative
    z-index: 1
    max-width: 1920px
    margin: 0 auto

    img
      width: 100%
      height: 482px

.nav
  float: left

  &__item
    line-height: 75px
    margin-right: 28px
    font-size: 16px

    &:hover, &--on
      color: #31ccff
