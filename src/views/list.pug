extends layout.pug

block title
  title 艺术图库
block links 
  link(type='text/css' href='https://cdn.staticfile.org/twitter-bootstrap/4.1.3/css/bootstrap.min.css' rel='stylesheet')
block maincontent
  - var url ='http://172.105.210.121:8080'
  .main
    .main-layout
      ul.pagination.pagination-top.justify-content-end
        li.page-item
          a.page-link(href="javascript:void 0")
            span= data.page 
            span /
            span= data.pages
        li.page-item(class={'disabled':data.page===1})
          a#prevPage.page-link(href='javascript:void 0')
            span!= '&laquo;'
        li.page-item(class={'disabled':data.page===data.pages})
          a#nextPage.page-link(href='javascript:void 0')
            span!= '&raquo;'
      .list
        each item in data.items
          a.list-item(href= url+item.path)
            .list-item__imgwrapper
              img(src= url+item.path)
            p.list-item__label= item.title
      ul#pagination.pagination.justify-content-center
    input(id='total',type='hidden',value=data.total)
    input(id='currentPageIndex', type='hidden', value=data.page)
    input(id='pageTotal', type='hidden', value=data.pages)
block outscripts
  script(src="/js/pagination.js")
block scripts
  script
    include pager.js


